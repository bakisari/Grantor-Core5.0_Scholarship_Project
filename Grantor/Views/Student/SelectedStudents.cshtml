@model List<AppUser>
@{
    ViewData["Title"] = "SelectedStudents";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/css/SelectStudent.css" rel="stylesheet" />
<div class="container-xxl py-5 bg-primary hero-header">

    <div class="row g-5 py-5">
        <div class="col-12 text-center" style="margin-bottom:0px;">
        </div>
    </div> 

</div>



    <div class="col-lg-12">
        <div class="wow fadeInUp" data-wow-delay="0.3s">
            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-sm-8 col-lg-6">
                        <!-- Section Heading-->
                        <div class="section_heading text-center wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                            <h3>Burs<span> Alan</span> Öğrencilerimiz</h3>
                            
                            <div class="line"></div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <!-- Single Advisor-->
                    @foreach (var item in Model)
                    {

                        <div class="col-12 col-sm-6 col-lg-6">
                            <div class="single_advisor_profile wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                                <!-- Team Thumb-->
                                <div class="advisor_thumb">
                                    <div class="card" style="height:300px">
                                        <img src="~/UserImages/@item.Image" style="height:300px" alt="">
                                    </div>
                                    <!-- Social Info-->
                                    <div class="social-info">
                                        <p>Burs KAZANDI</p>
                                    </div>
                                </div>

                                <!-- Team Details-->
                                <div class="single_advisor_details_info">
                                    <h4>@item.FirstName @item.LastName</h4>
                                    <p class="designation">@item.University.UniversityName</p>
                                    <p class="designation">@item.Faculty.FacultyName</p>
                                    <p class="designation">@item.Section.Name</p>
                                </div>

                            </div>
                        </div>

                    }


                </div>
            </div>
        </div>
    </div>


