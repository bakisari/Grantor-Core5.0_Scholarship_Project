@model EntityLayer.Concrate.Faq
@{
    ViewData["Title"] = "UpdateFaq";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="col-md-6 offset-sm-2">
    <form asp-action="UpdateFaq" method="post">
<input type="hidden" asp-for="ID" name="ID" />
        <div class="form-group">
            <label for="message-text" class="col-form-label">Soru</label>
            <input type="text" class="form-control" name="Title" asp-for="Title" id="message-text">
        </div>
        <div class="form-group">
            <label for="message-text" class="col-form-label">Cevap</label>
            <textarea rows="6" cols="200" class="form-control" asp-for="Explanation" name="Explanation" id="message-text"></textarea>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Güncelle</button>
    </form>
</div>