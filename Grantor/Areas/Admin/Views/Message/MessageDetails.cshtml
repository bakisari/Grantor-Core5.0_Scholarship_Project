@model EntityLayer.Concrate.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="col-lg-9 animated fadeInRight">
    <div class="mail-box-header">
        <div class="float-right tooltip-demo">
            <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Print email"><i class="fa fa-print"></i> </a>
            <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
        </div>
        <h2>
            Mesaj Görüntüle
        </h2>
        <div class="mail-tools tooltip-demo m-t-md">


            <h3>
                <span class="font-normal">Konu : </span>@Model.Subject
            </h3>
            <h5>
                <span class="float-right font-normal">@Model.Date.ToShortDateString()</span>
                <span class="font-normal">From: </span>@Model.Mail
            </h5>
        </div>
    </div>
    <div class="mail-box">


        <div class="mail-body">
            <p>
              
               @Model.Message
            </p>
        
        </div>
        
        <div class="mail-body text-right tooltip-demo">
            <a class="btn btn-sm btn-white" href="mail_compose.html"><i class="fa fa-reply"></i> Yanıtla</a>
            <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Sil</button>
        </div>
        <div class="clearfix"></div>


    </div>
</div>
